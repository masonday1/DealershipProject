<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="company.gui.ProfileManagementController">

    <top>
        <Button text="Back" onAction="#handleBack"
                BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets top="10" left="10"/>
            </BorderPane.margin>
        </Button>
    </top>

    <center>
        <TableView fx:id="dealershipTable" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nameColumn" text="Dealership Name" />
                <TableColumn fx:id="receivingColumn" text="Receiving Enabled" />
                <TableColumn fx:id="rentingColumn" text="Renting Enabled" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button text="Edit Dealership Name" onAction="#handleEditDealershipName"/>
                <Button text="Add Dealership Name" onAction="#handleAddDealershipName"/>
                <Button text="Add a Dealership" onAction="#handleAddDealership"/>
            </children>
        </VBox>
    </bottom>

</BorderPane>