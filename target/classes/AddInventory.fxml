<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="javafiles.gui.AddInventoryController">

    <top>
        <Button text="Back" onAction="#handleBack"
                BorderPane.alignment="TOP_LEFT" minWidth="125">
            <BorderPane.margin>
                <Insets top="10" left="10"/>
            </BorderPane.margin>
            <padding>
                <Insets top="10" right="20" bottom="10" left="20" />
            </padding>
        </Button>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button text="Load From File" onAction="#handleLoadFromFile" minWidth="250">
                    <padding>
                        <Insets top="10" right="20" bottom="10" left="20" />
                    </padding>
                </Button>
                <Button text="Enter Manually" onAction="#handleEnterManually" minWidth="250">
                    <padding>
                        <Insets top="10" right="20" bottom="10" left="20" />
                    </padding>
                </Button>
            </children>
        </VBox>
    </center>

</BorderPane>
